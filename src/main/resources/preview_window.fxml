<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="PreviewWindow"
      spacing="10" prefWidth="600.0">

  <padding>
    <Insets topRightBottomLeft="10"/>
  </padding>

  <Label fx:id="title" text="Access Token:" style="-fx-font-weight: bold;"/>
  <TextField fx:id="accessToken" maxWidth="Infinity" HBox.hgrow="ALWAYS" editable="false"/>
  <HBox spacing="10">
    <Button fx:id="clipboard" text="Copy To Clipboard"/>
    <Button fx:id="exit" text="Exit"/>
  </HBox>
</VBox>
